@page
@model RazorProjectV5.Pages.Item.CreateItemModel
@{
    ViewData["Title"] = "Create Item";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h3>Create Item</h3>
            <form method="post">
                <div class="form-group">
                    <label asp-for="item.Id" class="control-label">Item ID</label>
                    <input asp-for="item.Id" class="form-control" />
                    <span asp-validation-for="item.Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="item.Name" class="control-label">Item Name</label>
                    <input asp-for="item.Name" class="form-control" />
                    <span asp-validation-for="item.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="item.Price" class="control-label">Item Price</label>
                    <input asp-for="item.Price" class="form-control" />
                    <span asp-validation-for="item.Price" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <a asp-page="GetAllItems" class="btn btn-secondary">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>